{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Lazy.ly - URL Shortener Addon",
  "description": "fast, anonymous, easy url shortening",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite",
    "tabs",
    "http://lazy.ly/"
  ]
}
